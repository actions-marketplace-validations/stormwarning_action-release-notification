{
  "name": "action-release-notification",
  "version": "0.0.0",
  "private": true,
  "description": "Send a notification when a new release is published",
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "repository": "stormwarning/action-release-notification",
  "license": "ISC",
  "author": "Jeff Nelson (https://tidaltheory.io)",
  "main": "lib/main.js",
  "scripts": {
    "all": "npm run build && npm run lint && npm run pack && npm test",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint '**/*.{js,ts}' --ignore-pattern 'dist/**'",
    "pack": "ncc build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": "prettier --write"
  },
  "prettier": {
    "plugins": [
      "./node_modules/prettier-plugin-import-sort",
      "./node_modules/prettier-plugin-packagejson"
    ],
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@actions/core": "1.2.2",
    "@actions/github": "2.1.1",
    "@slack/web-api": "5.7.0"
  },
  "devDependencies": {
    "@slack/types": "1.3.0",
    "@types/jest": "25.1.x",
    "@types/node": "18.8.0",
    "@zazen/eslint-config": "6.0.0",
    "@zeit/ncc": "0.21.1",
    "eslint": "8.24.0",
    "husky": "4.2.x",
    "import-sort-style-python": "1.0.2",
    "jest": "25.1.x",
    "jest-circus": "25.1.x",
    "js-yaml": "3.13.x",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-import-sort": "0.0.7",
    "prettier-plugin-packagejson": "2.3.0",
    "ts-jest": "25.2.x",
    "typescript": "4.8.4"
  },
  "importSort": {
    ".js,.ts,": {
      "parser": "babylon",
      "style": "python"
    }
  }
}
