{
  "name": "action-release-notification",
  "version": "4.0.0",
  "private": true,
  "description": "Send a notification when a new release is published",
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "repository": "stormwarning/action-release-notification",
  "license": "ISC",
  "author": "Jeff Nelson (https://tidaltheory.io)",
  "type": "module",
  "main": "dist/main.cjs",
  "scripts": {
    "all": "npm run build && npm run lint && npm test",
    "build": "vite build",
    "changeset": "changeset add",
    "lint": "eslint '**/*.{c?js,ts}' --ignore-pattern 'dist/**'",
    "release": "node ./scripts/release.js",
    "test": "vitest run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{c?js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": "prettier --write"
  },
  "prettier": {
    "plugins": [
      "./node_modules/prettier-plugin-import-sort",
      "./node_modules/prettier-plugin-packagejson"
    ],
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@actions/core": "1.2.2",
    "@actions/github": "2.1.1",
    "@slack/web-api": "5.7.0"
  },
  "devDependencies": {
    "@actions/exec": "1.1.1",
    "@changesets/changelog-github": "0.4.7",
    "@changesets/cli": "2.25.0",
    "@slack/types": "1.3.0",
    "@types/node": "18.8.0",
    "@zazen/eslint-config": "6.0.0",
    "eslint": "8.24.0",
    "husky": "4.2.x",
    "import-sort-style-python": "1.0.2",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-import-sort": "0.0.7",
    "prettier-plugin-packagejson": "2.3.0",
    "typescript": "4.8.4",
    "vite": "3.1.4",
    "vitest": "0.23.4"
  },
  "importSort": {
    ".js,.cjs,.ts,": {
      "parser": "babylon",
      "style": "python"
    }
  }
}
